{
  "name": "@atomist/cli",
  "version": "0.4.1",
  "description": "The Atomist CLI",
  "author": "Atomist",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist/cli.git"
  },
  "homepage": "https://github.com/atomist/cli#readme",
  "bugs": {
    "url": "https://github.com/atomist/cli/issues"
  },
  "keywords": [
    "atomist",
    "automation",
    "cli"
  ],
  "dependencies": {
    "@atomist/automation-client": "^0.19.5",
    "@atomist/sdm": "^0.4.0",
    "@atomist/sdm-core": "^0.4.0",
    "@atomist/sdm-local": "https://r.atomist.com/38791846",
    "@octokit/rest": "^15.9.4",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "inquirer": "^6.0.0",
    "json-stringify-safe": "^5.0.1",
    "read-pkg-up": "^4.0.0",
    "tmp-promise": "^1.0.5",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.3",
    "@types/glob": "^5.0.35",
    "@types/inquirer": "0.0.42",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.1",
    "@types/power-assert": "^1.4.29",
    "@types/read-pkg-up": "^3.0.1",
    "@types/tmp": "0.0.33",
    "@types/yargs": "^11.1.1",
    "espower-typescript": "^8.1.3",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2",
    "typescript-formatter": "^7.2.2"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "npm-run-all compile test lint doc",
    "clean": "npm-run-all clean:compile clean:doc clean:run",
    "clean:compile": "rimraf build git-info.json \"index.{d.ts,js*}\" \"{lib,test}/**/*.{d.ts,js*}\" lib/typings/types.ts",
    "clean:dist": "npm-run-all clean clean:npm",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:doc": "rimraf doc",
    "compile": "npm-run-all compile:ts git:info",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --exclude \"**/*.d.ts\" --out doc index.ts lib",
    "fmt": "tsfmt --replace",
    "git:info": "node index.js git",
    "lint": "tslint --format verbose --project . --exclude \"node_modules/**\" --exclude \"**/*.d.ts\" \"**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "node index.js",
    "test": "mocha --require espower-typescript/guess \"test/**/*.test.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\"",
    "typedoc": "npm run doc"
  },
  "bin": {
    "atomist": "./index.js",
    "@atomist": "./index.js",
    "atomist-githook": "./githook.js"
  },
  "engines": {
    "node": "9.x.x",
    "npm": "6.x.x"
  }
}
